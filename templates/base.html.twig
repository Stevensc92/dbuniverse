{% spaceless %}
{% if is_granted('ROLE_USER') %}
    {% set CC = game.getCurrentCharacter() %}
    {% set character = CC.getCharacter() %}
{% endif %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% set subTitle = "DBUniverse - MMORPG Dragon Ball" %}
            {% block title %}{% endblock %} {{ subTitle }}
        </title>

        {% include 'template/css.html.twig' %}

        {% include 'template/seo.html.twig' %}
    </head>


    <body>
        {% include 'template/menu.html.twig' %}
        {% include 'template/flash.html.twig' %}
        {% include 'template/notification.html.twig' %}
        <div class="d-flex justify-content-between">
            {% if is_granted('ROLE_USER') %}
                {% include 'template/navbar-left.html.twig' %}
            <div id="content-page" class="mt-3 d-flex justify-content-between">
            {% endif %}

                {% block body %}
                {% endblock %}

            {% if is_granted('ROLE_USER') %}
            </div>
                {% include 'template/current-character.html.twig' %}
            {% endif %}
        </div>

        {% include 'template/footer.html.twig' %}
        {% include 'template/js.html.twig' %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
{% endspaceless %}

