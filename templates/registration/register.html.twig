{% form_theme form 'themes/register.form.html.twig' %}

<div class="d-flex mt-5 justify-content-end" id="inscription">
    <div id="inscription-content" class="mt-5 pt-2 large-4 text-center">
        <span>Rejoignez l'aventure d√®s maintenant !<br> Cela vous prendra une minute !</span>
        {{ form_start(form) }}
            <div class="container mt-1">
                <div class="small-12 medium-6 large-4 cell">
                    {{ form_row(form.username) }}
                </div>
                <div class="small-12 medium-6 large-4 cell">
                    {{ form_row(form.email) }}
                </div>
                <div class="small-12 medium-6 large-4 cell">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="small-12 medium-6 large-4 cell">
                    {{ form_row(form.plainPassword.second) }}
                </div>
                <div class="small-12 medium-6 large-4 cell">
                    <button type="submit" class="button">S'inscrire</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
